<Window xmlns="https://github.com/avaloniaui" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        x:Class="WeatherApp.MainWindow"
        Title="Weather App"
        Width="800" Height="600">
    <Window.Background>
        <ImageBrush Source="C:/Users/axelp/Desktop/School/CS/backWeatherApp/WeatherApp/img/background.png"/>
    </Window.Background>
    <DockPanel>
        <StackPanel Orientation="Vertical" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="10">
            <TextBlock x:Name="CityNamea" FontSize="24" Margin="10" Foreground="White"/>
            <TextBlock x:Name="Lat_longa" FontSize="16" Margin="10" Foreground="White"/>
            <TextBlock x:Name="WeatherLabela" FontSize="16" Margin="10" Foreground="White"/>
            <TextBlock x:Name="TemperatureLabela" FontSize="16" Margin="10" Foreground="White"/>
            <TextBlock x:Name="HumidityLabela" FontSize="16" Margin="10" Foreground="White"/>
            <TextBox x:Name="csa" Width="200" Margin="10"/>
            <Button Content="Get Weather" Click="Button_Click" Margin="10"/>
            <StackPanel x:Name="ForecastPanela" Orientation="Vertical" Margin="10"/>
            <StackPanel x:Name="paraa" Orientation="Vertical" Margin="10"/>
            <Image x:Name="WeatherIcona" Width="100" Height="100" Margin="10"/>
        </StackPanel>
    </DockPanel>
</Window>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="WeatherApp.MainWindow"
        Title="Weather App" Width="1500" Height="800">
	<Window.Background>
		<ImageBrush Source="C:\Users\axelp\Desktop\School\CS\backWeatherApp\WeatherApp\img\bg.png" />
	</Window.Background>
	<Grid>
		<StackPanel Margin="20" HorizontalAlignment="Center">
			<!-- App Title -->
			<TextBlock Text="Weather App" FontSize="36" FontWeight="Bold" Margin="0,20,0,10" HorizontalAlignment="Center" />

			<!-- Search Bar and Parameter Button -->
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
				<Button Name="fetchWeatherButton" Content="Fetch Weather" Margin="10,0,0,0" Click="Button_Click" />
				<Button Name="parameterButton" Click="paramter" Margin="10,0,0,0">
					<StackPanel Orientation="Horizontal" Name="parameterButtonContainer">
						<Image Source="C:\Users\axelp\Desktop\School\CS\backWeatherApp\WeatherApp\img\adjustment.png" Width="24" Height="24"/>
						<TextBlock Text="Parameters" Margin="5,0,0,0"/>
					</StackPanel>
				</Button>
			</StackPanel>

			<!-- Basic Weather Information -->
			<StackPanel Margin="0,0,0,20" HorizontalAlignment="Center">
				<TextBlock Name="CityNamea" FontSize="30" FontWeight="Bold" />
				<TextBlock Name="Lat_longa" FontSize="16" />

				<StackPanel Orientation="Horizontal" Margin="10">
					<Image Name="WeatherIcona" Width="100" Height="100" />
					<StackPanel Margin="10">
						<TextBlock Name="WeatherLabela" FontSize="24" FontWeight="Bold" />
						<TextBlock Name="TemperatureLabela" FontSize="20" />
						<TextBlock Name="HumidityLabela" FontSize="20" />
					</StackPanel>
				</StackPanel>
			</StackPanel>

			<!-- Forecast Section -->
			<StackPanel Name="ForecastPanela" Margin="10" />
		</StackPanel>
	</Grid>
</Window>